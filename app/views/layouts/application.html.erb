<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> | RailsBrew</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <style>
    nav {
      background-color: #eee;
    }
    ul {
      list-style: none;
    }
    ul li {
      display: inline-block;
    }
    li {
      padding: 0 0.5em;
    }
    nav {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }
    .avatar {
      border-radius: 50%;
    }
    .avatar-small {
      width: 22px;
      height: 22px;
    }
  </style>

  <body>
    <nav>
      <ul>
        <li><%= link_to 'Home', root_url %></li>
        <li><%= link_to 'About', about_url %></li>
      </ul>
      <ul>
        <% if logged_in? %>
          <li>Logged in as <%= current_user.name %></li>
          <li><%= gravatar_for current_user, 'small' %></li>
          <li><%= link_to 'My profile', current_user %></li>
          <li><%= link_to 'Log out', logout_url, :method => :delete %></li>
        <% else %>
          <li><%= link_to 'Log in', login_url %></li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
