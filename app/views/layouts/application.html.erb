<!DOCTYPE html>
<html>

  <head>
    <title><%= yield :title %> | RailsBrew</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li><%= link_to 'Home', root_url %></li>
          <li><%= link_to 'About', about_url %></li>
        </ul>
        <ul>
          <% if logged_in? %>
            <li>Logged in as <%= current_user.name %></li>
            <li><%= get_gravatar current_user, 'small' %></li>
            <li><%= link_to 'My profile', current_user %></li>
            <li><%= link_to 'Log out', logout_url, :method => :delete %></li>
          <% else %>
            <li>Welcome, stranger.</li>
            <li><%= link_to 'Log in', login_url %></li>
            <li><%= link_to 'Sign up', signup_url %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <div class="content-container">
      <%= yield %>
    </div>
    <footer>
    </footer>
    <%= debug(params) if Rails.env.development? %>
  </body>

</html>
