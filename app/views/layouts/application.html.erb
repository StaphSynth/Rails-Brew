<!DOCTYPE html>
<html>

  <head>
    <title><%= yield :title %> | RailsBrew</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-static-top navbar-inverse">
      <div class="container">

        <nav>
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to 'Home', root_url %></li>
            <li><%= link_to 'About', about_url %></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><p class="navbar-text">Logged in as <%= current_user.name %></p></li>
              <li class="navbar-text"><%= get_gravatar current_user, 'small' %></li>
              <li><%= link_to 'My profile', current_user %></li>
              <li><%= link_to 'Log out', logout_url, :method => :delete %></li>
            <% else %>
              <li><p class="navbar-text">Welcome, stranger.</p></li>
              <li><%= link_to 'Log in', login_url %></li>
              <li><%= link_to 'Sign up', signup_url %></li>
            <% end %>
          </ul>
        </nav>

      </div> <!-- /container -->
    </header>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
          <% flash.each do |key, value| %>
            <div class='text-center <%= "#{flash_class(key)}" %>'>
              <%= value %>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
    <footer class="footer">
      <div class="container">
        <p class="text-muted text-center">I am a footer. This is my purpose.</p>
      </div>
    </footer>
    <div class="container">
      <!-- <%= debug(params) if Rails.env.development? %> -->
    </div>
  </body>

</html>
